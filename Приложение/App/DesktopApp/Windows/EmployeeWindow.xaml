<Window x:Class="DesktopApp.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        xmlns:viewModels="clr-namespace:DataLayer.Models;assembly=DataLayer"
        mc:Ignorable="d"
        Title="Карточка сотрудника" 
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Height="650" Width="950" 
        MinHeight="650" MinWidth="950">
    <Window.DataContext>
        <viewModels:Employee/>
    </Window.DataContext>
    <Grid Background="#d9d9d9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10" Background="#ffffff">
            <StackPanel x:Name="EmployeeData">
                <StackPanel  Margin="10">
                    <TextBlock Text="Фамилия:" Margin="0,10,0,0"/>
                    <TextBox x:Name="SurnameTextBox" Text="{Binding Surname}"/>

                    <TextBlock Text="Имя:" Margin="0,10,0,0"/>
                    <TextBox x:Name="NameTextBox" Text="{Binding Name}"/>

                    <TextBlock Text="Отчество:" Margin="0,10,0,0"/>
                    <TextBox x:Name="PatronymicTextBox" Text="{Binding Patronymic}"/>

                    <TextBlock Text="Дата рождения:" Margin="0,10,0,0"/>
                    <DatePicker x:Name="BirthdayDatePicker" SelectedDate="{Binding Birthday}"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,0,5">
                            <TextBlock Text="Мобильный телефон:"/>
                            <TextBox x:Name="PhoneTextBox" Text="{Binding Phone}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1"  Margin="5,0,0,0">
                            <TextBlock Text="Рабочий телефон:"/>
                            <TextBox x:Name="WorkPhoneTextBox" Text="{Binding WorkPhone}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Электронная почта:" Margin="0,5,0,0"/>
                    <TextBox x:Name="EmailTextBox" Text="{Binding Email}"/>

                    <TextBlock Text="Стуктурное подразделение:" Margin="0,10,0,0"/>
                    <!--<TextBox x:Name="DepartmentTextBox" Text="{Binding DepartmentId}"/>-->
                    <ComboBox x:Name="DepartmentComboBox"/>


                    <TextBlock Text="Должность:" Margin="0,10,0,0"/>
                    <ComboBox x:Name="PositionComboBox" DisplayMemberPath="Name"/>

                    <TextBlock Text="Кабинет:" Margin="0,10,0,0"/>
                    <TextBox x:Name="CabinetTextBox" Text="{Binding Cabinet}"/>

                    <Button Content="Сохранить именения" Margin="0,10,0,0" Background="#FFE4F4CC" BorderBrush="#FFE6E6E6" x:Name="SaveButton" Click="SaveButton_Click"/>
                    <Button Content="Добавить сотрудника" Margin="0,10,0,0" Background="#FFE4F4CC" BorderBrush="#FFE6E6E6" x:Name="AddButton" Click="AddEmployeeButton_Click"/>
                    <Button Content="Уволить сотрудника" Margin="0,10,0,0" Background="#FFFF8C56" BorderBrush="#FFE6E6E6" x:Name="DismissButton" Click="DismissButton_Click"/>
                </StackPanel>
            </StackPanel>
            <CheckBox Content="Разрешить редактирование" x:Name="EditCheckBox" Click="EditCheckBox_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <DockPanel Grid.Column="1" Margin="10" Background="#ffffff">
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,10" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="PastCheckBox" Content="Прошедшие" Grid.Column="0" Click="FilterCheckBox_Click"/>
                    <CheckBox x:Name="CurrentCheckBox" Content="Текущие" Grid.Column="1" Click="FilterCheckBox_Click" IsChecked="True"/>
                    <CheckBox x:Name="FutureCheckBox" Content="Будущие" Grid.Column="2" Click="FilterCheckBox_Click" IsChecked="True"/>
                </Grid>


                <TextBlock Text="Обучения" Grid.Row="1"/>
                <ListView x:Name="EventsListView" HorizontalContentAlignment="Stretch" Grid.Row="2" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="1" Background="#FFE4F4CC">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}" Padding="3,0,0,0"/>
                                    <TextBlock Text=" - "/>
                                    <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                                    <TextBlock Text="{Binding Name}"  Padding="3,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Description}"  Padding="3,0,0,3"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock Text="Отгулы" Grid.Row="3"/>
                <ListView x:Name="FreeDaysListView" HorizontalContentAlignment="Stretch" Grid.Row="4">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="1" Background="#FFE4F4CC">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Padding="3,3,0,0">
                                 <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                                 <TextBlock Text=" - "/>
                                 <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                            </TextBlock>
                                </StackPanel>
                                <TextBlock Text="{Binding Description}"  Padding="3,0,0,3"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock Text="Отпуска" Grid.Row="5"/>
                <ListView x:Name="HolidaysListView" HorizontalContentAlignment="Stretch" Grid.Row="6">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="1" Background="#FFE4F4CC">
                                <TextBlock Padding="3,3,0,0">
                            <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                            <TextBlock Text=" - "/>
                            <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                        </TextBlock>
                                <TextBlock Text="{Binding Description}"  Padding="3,0,0,3"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel x:Name="EventData" Grid.Row="7">
                    <StackPanel >
                        <TextBlock Text="Добавить событие" Margin="0,0,0,5"/>
                        <TextBlock Text="Вид события:"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="TypeComboBox"  Width="150" >
                                <ComboBoxItem Content="Обучение"/>
                                <ComboBoxItem Content="Отгул"/>
                                <ComboBoxItem Content="Отпуск"/>
                            </ComboBox>
                            <TextBlock Text="От:" Margin="5,5,5,0"/>
                            <DatePicker x:Name="FromDatePicker"/>
                            <TextBlock Text="До:" Margin="5,5,5,0"/>
                            <DatePicker x:Name="ToDatePicker"/>
                        </StackPanel>
                        <TextBlock  Text="Комментарий:"/>
                        <TextBox x:Name="DescriptionTextBox" Height="70" AcceptsReturn="True"/>
                        <Button Content="Добавить событие" Margin="0,10,0,0" Background="#FFE4F4CC" BorderBrush="#FFE6E6E6" x:Name="AddEventButton" Click="AddEventButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
