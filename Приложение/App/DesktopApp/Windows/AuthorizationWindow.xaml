<Window x:Class="DesktopApp.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="LoginTextBox" Text="1"/>
        <TextBox x:Name="PasswordTextBox" Text="Password"/>
        <Button x:Name="AuthButton" Content="Авторизоваться / Получить" Click="AuthButton_Click"/>
        <DataGrid x:Name="EmployeesDataGrid" Height="400"/>
        <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click"/>
        <Button x:Name="SaveFileButton" Content="Сохранить" Click="SaveFileButton_Click"/>
        <Image x:Name="ProfilePhoto" Height="100" Width="100"/>
    </StackPanel>
</Window>
