<Window x:Class="DesktopApp.DepartmentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="" 
        Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        Loaded="Window_Loaded" WindowState="Maximized">
    <Grid Background="#e1f4c8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="259*"/>
            <ColumnDefinition Width="141*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3">
            <Image Source="/Images/Logo.png" Margin="3" Height="70"/>
            <Border Background="White" CornerRadius="10" Margin="15" Width="650">
                <Label Content="Организационная структура" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </Border>
        </StackPanel>

        <TreeView x:Name="departmentsTreeView" Grid.Row="1" SelectedItemChanged="DepartmentsTreeView_SelectedItemChanged">
            <TreeView.Resources>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="True"/>
                    <Setter Property="Background" Value="#e1f4c8"/>
                    <Setter Property="Margin" Value="5, 20"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="ItemsPanel">
                        <Setter.Value>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TreeView.Resources>
        </TreeView>
        <ListView x:Name="employeesListView" Grid.Column="1" Grid.Row="1" MouseDoubleClick="EmployeesListView_MouseDoubleClick" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Department.Name}"/>
                        <TextBlock Text="{Binding Position.Name}"/>
                        <TextBlock Text="{Binding FullName}"/>
                        <TextBlock Text="{Binding WorkPhone}"/>
                        <TextBlock Text="{Binding Email}"/>
                        <TextBlock Text="{Binding Cabinet}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
